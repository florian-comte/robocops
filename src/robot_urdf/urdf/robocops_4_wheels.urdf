<?xml version="1.0"?>
<robot name="RoboCops">

    <material name="green">
        <color rgba="0 0.8 0 1" />
    </material>

    <material name="yellow">
        <color rgba="1 0.99 0.0039 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>



    <link name="base_footprint" />

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <material name="red" />
        </visual>
    </link>

    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="wheel_FR">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="wheel_FL">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="wheel_BR">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
            <material name="green" />
        </visual>
    </link>

    <link name="wheel_BL">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.06" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 0 0" />
            <material name="green" />
        </visual>
    </link>



    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.04" rpy="0 0 0" />
    </joint>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link" />
        <child link="lidar" />
        <origin xyz="0.15 0 0.22" rpy="0 0 0" />
    </joint>

    <joint name="base_wheel_FR_joint" type="continuous">
        <parent link="base_link" />
        <child link="wheel_FR" />
        <origin xyz="0.15 -0.23 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_wheel_FL_joint" type="continuous">
        <parent link="base_link" />
        <child link="wheel_FL" />
        <origin xyz="0.15 0.23 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_wheel_BR_joint" type="continuous">
        <parent link="base_link" />
        <child link="wheel_BR" />
        <origin xyz="-0.15 -0.23 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_wheel_BL_joint" type="continuous">
        <parent link="base_link" />
        <child link="wheel_BL" />
        <origin xyz="-0.15 0.23 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

</robot>